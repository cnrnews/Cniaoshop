<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="4dp"
    app:contentPadding="@dimen/dialog_round_radius"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list_item"
        android:orientation="horizontal"
        android:padding="@dimen/dialog_round_radius">

        <ImageView
            android:id="@+id/drawee_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/normalButtonWidth"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/icon_discover" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                style="@style/ware_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                style="@style/line_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_vertical"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/text_price"
                    style="@style/ware_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />

                <Button
                    android:id="@+id/btn_add"
                    style="@style/bigRedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="立即购买" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>